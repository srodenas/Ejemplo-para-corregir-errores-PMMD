<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Example_with_catalogs" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Personaliza el tema oscuro aquí -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkAccent</item>
    </style>

    <!-- Tema específico para BottomNavigationView -->
    <style name="Theme.MyApp.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/dark_bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/dark_bottom_nav_text_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
</resources>